<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <header role="banner">
            <%= render 'layouts/navbar' %>
          </header>
          <%= render 'layouts/flash_message' %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
